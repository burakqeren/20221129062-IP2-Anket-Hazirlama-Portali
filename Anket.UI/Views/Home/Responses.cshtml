            //         tr += "<tr>" + idCol + nameCol + "</tr>";
            //     });
            //     $("#categoryTable tbody").append(tr);
            // }
            //Method
            function updateTable(data) {
                $("#categoryTable tbody").empty();
                var tr = '';
                $.each(data, function (i, item) {

                    var idCol = "<td>" + (i + 1) + "</td>";
                    var questionCol = "<td>" + item.question.text + "</td>";
                    var textCol = "<td>" + item.text + "</td>";
                    var userCol = "<td>" + item.user.userName + "</td>";

                    tr += "<tr>" + idCol + questionCol + userCol + textCol + "</tr>";
                });
                $("#categoryTable tbody").append(tr);
            }


            //Event
            $("#createButton").on("click", function () {
                create();
            });

            $(document).on("click", ".editButton", function () {
                var id = $(this).data("id");
                var name = $(this).data("name");

                $("#editName").html(name);
                $("#editIdInput").val(id);
                $("#editInput").val(name);

                $('#editModal').modal('show')

            });

            $(document).on("click", ".deleteButton", function () {
                if (confirm("Silmeyi onaylıyor musunz?")) {
                    var id = $(this).data("id");
                    remove(id);
                } else {

                }
            });

            $("#confirmEdit").on("click", function () {
                edit();
            });
        });
    </script>
}